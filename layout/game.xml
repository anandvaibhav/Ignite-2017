    <!--SCORE BOARD UI-->

    <RelativeLayout
        android:id="@+id/score_board"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorTransparentDark">

        <TextView
            android:id="@+id/score_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="124"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="70sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/image_rank"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/medal" />

            <TextView
                android:id="@+id/score_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_rank"
                android:text="19"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="40sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/score_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/image_highscore"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/highscore" />

            <TextView
                android:id="@+id/score_highest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_highscore"
                android:text="452"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="40sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/score_punch_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:text="You can do better baby !!"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/score_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next" />

        <ImageView
            android:id="@+id/score_replay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/replay" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/new_high_score_stamp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/score_board"
        android:layout_alignLeft="@+id/score_board"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/newhighscore" />

    <RelativeLayout
        android:id="@+id/game_pause_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/colorTransparentDark">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/buttonToggleMusic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/buttonToggleSound"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignRight="@+id/buttonToggleMusic"
                android:layout_below="@+id/buttonToggleMusic"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/buttonPlay"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/buttonToggleSound"
                android:layout_marginBottom="20dp"
                android:background="@drawable/play" />

            <Button
                android:id="@+id/button_facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/buttonPlay"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="140dp"
                android:background="@drawable/facebook" />

            <Button
                android:id="@+id/button_about"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/button_facebook"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/mrdeveloper_white_red" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondary_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:id="@+id/pause_rank"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_rank1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/medal" />

                <TextView
                    android:id="@+id/menu_rank"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="12"
                    android:textColor="@color/colorTransparentLight"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/image_highscore1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/highscore" />

                <TextView
                    android:id="@+id/menu_highscore"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="237"
                    android:textColor="@color/colorTransparentLight"
                    android:textSize="20sp" />

            </LinearLayout>


            <Button
                android:id="@+id/buttonDummyExit"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/exit" />

            <Button
                android:id="@+id/buttonLeaderboard"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_above="@+id/buttonDummyExit"
                android:layout_marginBottom="20dp"
                android:background="@drawable/medal" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayoutTrivia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="0dp">

            <View
                android:id="@+id/triviaDivider"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:background="@color/colorAccent" />

            <ImageView
                android:id="@+id/triviaImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/triviaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/triviaDivider"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Mr. Eagle is pure vegetarian"
                android:textAlignment="center"
                android:textColor="@color/colorTextHeadingLight"
                android:textSize="17sp" />

        </RelativeLayout>

    </RelativeLayout>

    <!--EXIT POP_UP UI-->
    <RelativeLayout
        android:id="@+id/relativeLayoutReallyExit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorTransparentDark">

            <TextView
                android:id="@+id/game_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Leaving so soon?"
                android:textColor="@color/colorTextHeadingLight"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/exitPopupYes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/exit_yes" />

            <ImageView
                android:id="@+id/exitPopupNo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/exitPopupYes"
                android:src="@drawable/exit_no" />

        </RelativeLayout>
    </RelativeLayout>
    <!--LICENCE AGREEMENT-->
    <RelativeLayout
        android:id="@+id/license_agreement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/license_display"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorTransparentDarker">

            <TextView
                android:id="@+id/license_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:text="LICENSE AGREEMENT"
                android:textColor="@color/colorTransparentLight"
                android:textSize="30sp" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/license_head"
                android:background="@color/colorTransparentLight" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/line"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THIS LICENSE AGREEMENT IS YOUR PROOF OF LICENSE
                        \nPlease read the following License agreement. By cicking yes, you agree to the following:
                        \n
                        \n(a) Any gold coins collected in the game, belong to the developers.
                        \n(b) Any fried chicken created in this game, belongs to KFC.
                        \n(c) Any eggs the birds lay, are fragile. Please handle with care.
                        \n(d) You are legally required to Brag about the game among peers.
                        \n
                        \nYou agree not to sue Mr. Developer for anything, like literally anything because we can't afford lawyers.
                        \nYou acknowledge that the game is totally Awesome.
                        \n
                        \nSince you cared to scroll this down Mr. Developer will sincerely like to thank you for participating in his event and since this is a fake license agreement, you have to accept it, or don't we have only one button available."
                    android:textColor="@color/colorTransparentLight"
                    android:textSize="16sp" />
            </ScrollView>

            <View
                android:id="@+id/license_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:background="@color/colorTransparentLight" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text=" Mr. Developer &#169; 2017"
                android:textColor="@color/colorTransparentLight"
                android:textSize="14sp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/license_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/license_display"
            android:layout_alignTop="@+id/license_display"
            android:layout_marginRight="10dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/next" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>